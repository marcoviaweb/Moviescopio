<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/moviescopio_theme_normal</item>
        <item name="colorPrimaryDark">@color/moviescopio_theme_dark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MovieTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Moviescopio.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Moviescopio.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/art_title</item>
    </style>

    <style name="MovieListStyle">
    </style>

</resources>